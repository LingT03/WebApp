<div id="<%= dom_id student %>">
  <p>
    <strong>First name:</strong>
    <%= student.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= student.last_name %>
  </p>

  <p>
    <strong>Major:</strong>
    <%= student.major %>
  </p>

 <p>
    <strong>Minor:</strong>
    <%= student.minor.present? ? student.minor : 'N/A' %>
 </p>  

  <p>
    <strong>Expected graduation date:</strong>
    <%= student.expected_graduation_date %>
  </p>

</div>
